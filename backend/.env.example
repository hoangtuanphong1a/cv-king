# Database Configuration
DB_TYPE=mssql

# Option 1: Using individual environment variables (for development/local)
DB_HOST=sqlserver
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=Strong
DB_NAME=cv_king_db

# Option 2: Using connection string (for production/Jenkins) - RECOMMENDED
DB_CONNECTION_STRING=Server=sqlserver,1433;Database=cv_king_db;User Id=sa;Password=Strong;Encrypt=false;TrustServerCertificate=true;

# App Configuration
APP_PORT=3003

# JWT Configuration
JWT_ACCESS_SECRET=your_access_token_secret_key_here
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_ACCESS_EXPIRATION_TIME=1h
JWT_REFRESH_EXPIRATION_TIME=7d

# Cloudinary Configuration (Optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
